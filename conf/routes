# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                     controllers.Application.index
#GET         /                                com.tuplejump.playYeoman.Yeoman.index

#silouette
GET         /user                            @controllers.ApplicationController.user
GET         /auth/logout                     @controllers.ApplicationController.signOut
POST        /auth/signin                     @controllers.CredentialsAuthController.authenticate
POST        /auth/signup                     @controllers.SignUpController.signUp
GET         /authenticate/:provider          @controllers.SocialAuthController.authenticate(provider)
POST        /authenticate/:provider          @controllers.SocialAuthController.authenticate(provider)

# Dynamic part of the url
#GET         /views/$template<.+>.html        @controllers.ApplicationController.view(template)

#santo
POST        /term                            controllers.ElasticSearch.term

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

POST        /item                            controllers.Items.createFromJson